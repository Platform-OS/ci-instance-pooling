<div id="blurred" style="display:block;" class="blurred-background"></div>
<div id="addInstanceForm" style="display:block;" class="add-form">
    <form action="/instances" method="POST">
        <h2>Add instance to pooling</h2>
        <label for="domain">Domain</label>
        <input
          type="text"
          {% if errors.domain %}style="border: 1px solid red;"{% endif %}
          placeholder="https://your-instance.com/"
          id="domain"
          name="domain" 
          value="{{ domain }}"
          required>
        {% if errors.domain %}
          <small style="color: red;">Error(s): 
          {% for error in errors.domain %}
            {{ error }}, 
          {% endfor %}
          </small></br>
        {% endif %}
        <label style="margin-bottom: 10px;" for="pos_cli_token">pos_cli_token</label>
        <input 
          type="text"
          {% if errors.pos_cli_token %}style="border: 1px solid red;"{% endif %}
          placeholder="paste your token here"
          id="pos_cli_token"
          name="pos_cli_token"
          value="{{ pos_cli_token }}"
          required>
        {% if errors.pos_cli_token %}
          <small style="color: red;">Error(s): 
          {% for error in errors.pos_cli_token %}
              {{ error }}, 
          {% endfor %}
          </small></br>
        {% endif %}
    
        <input type="hidden" name="authenticity_token" value="{{ context.authenticity_token }}">
        <button class="btn-available" type="submit">Confirm</button>
    </form>
</div>

<script>
    document.getElementById("showFormBtn").addEventListener("click", function () {
        document.getElementById("addInstanceForm").style.display = "block";
        document.getElementById("blurred").style.display = "block";
    });

    document.getElementById("blurred").addEventListener("click", function () {
        document.getElementById("addInstanceForm").style.display = "none";
        this.style.display = "none";
    });
</script>